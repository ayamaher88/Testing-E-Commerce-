pipeline {
    agent any
    tools {
        nodejs 'nodejs-default' // Use the name you gave your NodeJS configuration
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ayamaher88/Testing-E-Commerce-.git'
            }
        }

        stage('Run API Tests with Newman') {
            steps {
                echo 'Running API Tests with Newman...'
                bat 'npm install -g newman'
                bat 'newman run "Demoblaze API Tests.postman_collection.json"'
                // Add your environment and reporter options as needed using 'bat'
                // For example:
                // bat 'newman run "collection.json" -e "environment.json" -r htmlextra --reporter-htmlextra-export report.html'
            }
        }

        stage('Publish API Test Results (Optional)') {
            steps {
                echo 'Publishing API Test Results (if any)...'
                // ... (reporting configuration as needed using 'bat' or other plugins)
            }
        }

        stage('Post-Build Actions') {
            steps {
                script {
                    echo 'Performing post-build actions...'
                    // Add your actual post-build steps here
                }
            }
        }
    }
}
