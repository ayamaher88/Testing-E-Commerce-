pipeline {
    agent any

    environment {
        NODE_HOME = 'C:\\Program Files\\nodejs' // Ensure this is the correct path
        // It's generally better to rely on the system PATH for globally installed tools
        // NEWMAN_HOME = 'C:\\Users\\ascho\\AppData\\Roaming\\npm'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ayamaher88/Testing-E-Commerce-.git'
            }
        }

        stage('Run API Tests with Newman') {
            steps {
                echo 'Running API Tests with Newman...'
                bat """
                    echo "Setting temporary environment variables for this step..."
                    set PATH="${NODE_HOME};%PATH%"
                    echo "Current PATH before Newman: %PATH%"
                    newman --version
                    newman run "Demoblaze API Tests.postman_collection.json"
                    // If you have an environment file:
                    // newman run "Demoblaze API Tests.postman_collection.json" -e "your_environment.json"
                    // If you want to generate reports:
                    // newman run "Demoblaze API Tests.postman_collection.json" -e "your_environment.json" -r htmlextra,junit --reporter-htmlextra-export test-report.html --reporter-junit-export junit-report.xml
                """
            }
        }

        stage('Publish API Test Results (Optional)') {
            steps {
                echo 'Publishing API Test Results (if any)...'
                // ... (reporting configuration as needed)
            }
        }

        stage('Post-Build Actions') {
            steps {
                script {
                    echo 'Performing post-build actions...'
                    // Add your actual post-build steps here
                }
            }
        }
    }
}
