pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building the Maven project...'
                sh '"C:\\Program Files\\Git\\bin\\sh" -c "cd Automation/Demoplaze_Fullproject-master && mvn clean install -DskipTests"'
            }
        }
        stage('Test') {
            steps {
                echo 'Running the TestNG tests...'
                sh '"C:\\Program Files\\Git\\bin\\sh" -c "cd Automation/Demoplaze_Fullproject-master && mvn test"'
                junit 'Automation/Demoplaze_Fullproject-master/target/surefire-reports/TEST-*.xml'
            }
        }
        // ... other stages
    }
}
